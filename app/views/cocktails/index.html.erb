<h3>index.html.erb</h3>


<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-10 col-sm-offset-1">

      <h1>All cocktails</h1>
      <ul class="list-group">
        <% @cocktails.each do |cocktail| %>
          <li class="list-group-item">
            <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/breakfast.jpg)">
            <%= link_to cocktail.name, cocktail_path(cocktail) %>
            </div>

          </li>
        <% end %>
      </ul>
    </div>
  </div>
  <div class= "btn-primary">
  <%= link_to 'Add a new cocktail', new_cocktail_path %>
  </div>
</div>





